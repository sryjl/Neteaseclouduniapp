.firesearch {
  height: 60rpx;
  border-bottom: 1px solid #E6E6E6;
  text-align: left;
}
.firesearch text {
  margin: 0;
  height: 40rpx !important;
  font-size: 30rpx;
  vertical-align: middle;
}
.firesearch .fire {
  margin-left: 30rpx;
  height: 30rpx;
  width: 30rpx;
  vertical-align: middle;
}
.hotlist::after {
  content: "";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
.lefthot {
  width: 46%;
  float: left;
  margin-top: 30rpx;
  margin-left: 4%;
}
.lefthot navigator {
  font-size: 30rpx;
  margin-bottom: 20rpx;
  display: block;
  white-space: nowrap;
}
.lefthot navigator text {
  margin-right: 15rpx;
  max-width: 60%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: inline-block;
}
.lefthot navigator .lessthanten {
  margin-right: 30rpx !important;
}
.lefthot navigator image {
  height: 30rpx;
  margin-bottom: 6rpx;
}
.righthot {
  width: 50%;
  float: left;
  margin-top: 30rpx;
}
.righthot navigator {
  font-size: 30rpx;
  margin-bottom: 20rpx;
  display: block;
  white-space: nowrap;
}
.righthot navigator text {
  margin-right: 15rpx;
  max-width: 60%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: inline-block;
}
.righthot navigator .lessthanten {
  margin-right: 30rpx !important;
}
.righthot navigator image {
  height: 30rpx;
  margin-bottom: 6rpx;
}
.hotserchmore {
  margin-top: 30rpx;
  text-align: center;
  font-size: 20rpx;
  color: #808080;
}
.hide {
  display: none;
}
.bold {
  font-weight: bold;
}
.bold .lessthanten {
  color: #EC4141;
}
.showSearchcontent {
  position: absolute;
  left: 15rpx;
  z-index: 1;
  background-color: #FFFFFF;
  width: 85%;
  border: 1px solid #eee;
}
.searchconent {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 14px;
  margin-left: 30rpx;
  border-bottom: 1rpx solid #d43c33;
}
.searchitem {
  margin-left: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.searchitem .itemcontent {
  color: #808080;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  margin-left: 20rpx;
  border-bottom: 1px solid #eee;
  font-size: 14px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.history {
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  line-height: 50rpx;
}
.history .title {
  height: 50rpx;
  font-size: 28rpx;
  margin-left: 30rpx;
  margin-bottom: 20rpx;
}
.history .historyItem {
  height: 50rpx;
  font-size: 26rpx;
  background-color: #ededed;
  margin-left: 20rpx;
  padding: 0 30rpx;
  -webkit-border-radius: 20rpx;
          border-radius: 20rpx;
  margin-bottom: 20rpx;
}
.history .delete {
  position: absolute;
  bottom: 20rpx;
  right: 15rpx;
  font-size: 36rpx;
}

