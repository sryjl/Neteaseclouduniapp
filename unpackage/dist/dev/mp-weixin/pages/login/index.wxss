/* 产生动画（向外扩散变大）的圆圈 第一个圆 */
.pulse {
	position: absolute;
	height: 500rpx;
	width: 500rpx;
	top:50%;
	left: 50%;
    margin-top: -250rpx;    /* 高度的一半 */
	margin-left: -250rpx;    /* 宽度的一半 */
	border: 1px solid #FF0033;
	-webkit-border-radius: 50%;
	border-radius: 50%;
	z-index: 1;
	opacity: 0;
	-webkit-animation: warn 2s ease-out;
	animation: warn 2s ease-out;
	-webkit-animation-iteration-count: infinite;
	animation-iteration-count: infinite;
	-webkit-box-shadow: 1px 1px 30px #FF0033;
	        box-shadow: 1px 1px 30px #FF0033;
	/* 阴影效果 */
}

